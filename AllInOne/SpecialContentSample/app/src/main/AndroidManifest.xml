<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.threebitter.beacons.specialcontentsample">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="com.threebitter.DeveloperAppCode"
            android:value="TbBTChecker001" />
        <meta-data
            android:name="com.threebitter.MaxCount"
            android:value="20" />
        <meta-data
            android:name="com.threebitter.WakeUpTime"
            android:value="5"/>

        <meta-data
            android:name="com.threebitter.BackgroundPeriodTime"
            android:value="5"/>

        <meta-data
            android:name="com.threebitter.EnableAdid"
            android:value="false"/>

        <meta-data
            android:name="com.threebitter.EnableLogging"
            android:value="true"/>
        <service
            android:name="com.threebitter.sdk.service.BeaconService"
            android:enabled="true"
            android:exported="false"
            android:isolatedProcess="false" />
        <service
            android:name="com.threebitter.sdk.service.BeaconProcessor"
            android:enabled="true"
            android:exported="false" />
    </application>

</manifest>

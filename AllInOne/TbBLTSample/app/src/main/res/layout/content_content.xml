<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.threebitter.beacons.brspecificcontentsample.ContentActivity"
    tools:showIn="@layout/activity_content">

    <TextView
        android:id="@+id/contentDetailTitle"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:textSize="15sp"
        android:layout_margin="10dp"
        android:layout_gravity="center_horizontal"/>
    <TextView
        android:layout_below="@id/contentDetailTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/contentDetail"
        android:layout_margin="20dp"
        android:layout_gravity="center_horizontal"/>
    <ImageView
        android:layout_width="128dp"
        android:layout_height="128dp"
        android:id="@+id/contentDetailImage"
        android:layout_below="@id/contentDetail"
        android:layout_margin="20dp"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"/>

</RelativeLayout>
